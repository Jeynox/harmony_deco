{% extends 'admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class='h1-gestion-categories'>Category index</h1>
    <a href="{{ path('app_admin_category_new') }}" class='lien-category create-category m-3'>Nouvelle catégorie</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}" class='lien-category'>Détail</a>
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class='lien-category'>Modiffier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
